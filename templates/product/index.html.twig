{% extends "base.html.twig" %}

{% block body %}
    {% for product in products %}
        <p>
            {{ product.name }}
        </p>
        <img src="{{ product.image }}" height="500px" width="500px">
        <p>
            {{ product.price }}
        </p>
        <a href="{{ url('product.detail', {slug: product.slug}) }}" class="btn btn-primary">consulter</a>
    {% endfor %}

{% endblock %}